generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Apply 4
model MortgageApplication {
  id               String @id @default(auto()) @map("_id") @db.ObjectId
  fullName         String
  email            String
  phoneNumber      String
  loanAmount       Float
  propertyValue    Float
  creditScore      Int
  employmentStatus String
  annualIncome     Float
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}